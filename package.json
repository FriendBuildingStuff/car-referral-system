{
  "name": "car-referral-system",
  "main": "main.js",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron": "cross-env NODE_ENV=development electron .",
    "electron:build": "cross-env NODE_ENV=production ELECTRON_BUILD=true next build && cross-env NODE_ENV=production electron-builder",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\""
  },
  "dependencies": {
    "@clerk/nextjs": "^6.10.3",
    "@heroicons/react": "^2.2.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.57.0",
    "@tailwindcss/forms": "^0.5.9",
    "@vercel/postgres": "^0.10.0",
    "autoprefixer": "10.4.20",
    "bcrypt": "^5.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.477.0",
    "next": "^15.2.4",
    "next-auth": "5.0.0-beta.25",
    "postcss": "8.4.49",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "recharts": "^2.15.1",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "3.4.16",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "5.7.2",
    "use-debounce": "^10.0.4",
    "web-push": "^3.6.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "22.10.1",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@types/web-push": "^3.6.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "eslint-config-next": "15.1.5",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.yourcompany.car-referral-system",
    "productName": "Car Referral System",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "out/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
